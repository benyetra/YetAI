# AI Sports Betting MVP - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="AI Sports Betting MVP"
DEBUG=True

# Database Configuration
DATABASE_URL="postgresql://sports_user:sports_pass@localhost:5432/sports_betting_ai"

# API Keys - The Odds API
ODDS_API_KEY="your_odds_api_key_here"  # Get from https://the-odds-api.com/

# OpenAI API for AI predictions
OPENAI_API_KEY="your_openai_api_key_here"  # Get from https://platform.openai.com/

# Weather API (optional for game conditions)
WEATHER_API_KEY="your_weather_api_key_here"

# Authentication
SECRET_KEY="your-production-secret-key-here-change-this"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis for caching
REDIS_URL="redis://localhost:6379"

# Payment Processing
STRIPE_SECRET_KEY="your_stripe_secret_key_here"

# SMS Notifications
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"